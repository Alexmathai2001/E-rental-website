                        <option value="Active">Active</option>
                        <option value="Blocked">Blocked</option>
                    </select>
                </div>
                <div class="flex justify-center">
                    <button class="bg-[#27374D] px-4 py-2 rounded-full mt-4 text-white font-medium">Update</button>
