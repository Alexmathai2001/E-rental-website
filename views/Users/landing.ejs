<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Landing Page</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
</head>
<body>
    <!--header section-->
    <header>
        <div class="bg-[#27374D] px-4 py-3 flex justify-between text-white items-center font-medium">
            <div class="flex">
                <button onclick="menuslidein()" class="mx-1 lg:hidden"><img src="/images/menu.png" class=" h-6" alt=""></button>
                <img src="/images/Logo.png" class="h-8 lg:h-10" alt="">
            </div>
            <div class="flex">
                <a href="/user/myaccount" class="text-white opacity-60 text-sm hidden lg:flex mx-3">My Account</a>
                <a href="/user/myorders" class="text-white opacity-60 text-sm hidden lg:flex mx-3">My Orders</a>
                <a href="/User/cart" class="text-white opacity-60 text-sm hidden lg:flex mx-3">My Cart</a>
                <button><img src="/images/search-white.png" class="h-5 mx-5" alt="" /></button>
                
            </div>
        </div>
    </header>
    <!--main section-->
    <!--container div-->
    <div class="my-2 mx-3 lg:mx-8">
        <p class="font-semibold opacity-40 text-sm my-2">Home</p>
        <!--Banner-->
        <div class="">
            <p class="text-base font-semibold my-2 lg:text-xl">Rental</p>
            <div class="lg:flex lg:justify-center">
                <div class="bg-[#27374D] py-10 lg:py-32 px-3 lg:my-5 md:flex md:justify-evenly md:items-center lg:w-2/3 lg:h-36 lg:rounded-md">
                    <div class=" flex flex-col items-center">
                        <img src="/images/Logo.png" class="h-8 lg:h-14" alt="">
                        <p class="text-white text-sm my-3 lg:text-xl"><span class="opacity-90 font-medium">Rent</span> <span class="opacity-50">the equipments that you need today</span></p>
                    </div>
                    <div class="flex justify-center">
                        <button class="bg-[#DDE6ED] px-5 py-1 h-8 rounded-sm text-[#27374D]">Explore</button>
                    </div>
                </div>
            </div>
        </div>
        <!--new launches-->
        <div>
            <div class="flex items-center justify-between my-2 lg:justify-start">
                <p class="text-base font-semibold my-2 lg:text-xl">New Launches</p>
            </div>
            <!--products-->
            <div class="flex justify-around w-full">
                <div id="scrollingdiv" class="grid grid-cols-2 grid-rows-2 lg:flex lg:flex-wrap">
                    <% products.reverse().slice(0,6).forEach((data) => { %>
                        <div class="flex flex-col items-center w-fit mx-3 my-2 border-[#27374D] rounded-lg border-2 lg:m-5">
                            <div class="flex justify-end w-full"><img src="/images/new.png" class="lg:h-12 h-8" alt=""></div>
                            <button class="bg-white my-2 lg:px-7 px-4 lg:pb-7 pb-4 rounded-xl"><img src="<%= data.imageurl %>" class="h-24 w-24 md:h-32 md:w-32" alt=""></button>
                            <div class="text-xs py-1 lg:text-sm rounded-b-lg text-white bg-[#27374D] lg:font-semibold  w-full flex justify-center capitalize"><%= data.productname%></div>
                        </div>      
                        <% }) %>
                </div>

            </div>
            
            
        </div>
        <!--Available categories-->
        <div>
            <p class="text-base font-semibold my-2  lg:text-xl">Available Categories</p>
            <div class="lg:flex lg:justify-evenly">

                <% categories.reverse().slice(0,2).forEach((data) => {%>
                <div class="border-[1px] bg-slate-50 border-[#27374D] rounded-2xl">
                    <p class="text-sm font-semibold lg:text-lg capitalize bg-[#27374D] flex justify-center py-1 rounded-t-2xl  text-white"><%= data.categoryname %></p>
                    <div class="flex  justify-between lg:justify-start ">
                        <div class="flex justify-center flex-wrap px-2">
                            <% products.filter(function(product){ return product.category == data.categoryname}).reverse().slice(0,4).forEach((data) => { %>
                            <div class=" bg-white shadow-md hover:shadow-xl mt-4 p-2 m-1 flex flex-col items-center lg:h-60 w-40 py-8 lg:py-0">
                                <div>
                                    <img src="<%= data.imageurl %>" class="h-16 w-16 lg:w-28 lg:h-28 p-2"
                                        alt="" />
                                </div>
                                <div>
                                    <p class="py-1 font-semibold truncate max-w-32 text-sm capitalize"> <%= data.productname %> </p>
                                </div>
                                <div>
                                    <p class="text-xs opacity-50 capitalize"> <%= data.brandname %> </p>
                                </div>
                                <div class="flex justify-between w-full items-center lg:my-6">
                                    <div>
                                        <span class="text-sm text-slate-600"><span class="font-semibold lg:text-base text-sm text-black">$<%= data.saleprice %></span>/Day</span>
                                    </div>
                                    <div>
                                        <button class="p-1 bg-[#526D82] hover:bg-[#27374D] rounded-s-full -me-1 pe-3 ps-3"><img src="/images/cart-white.png" class="h-6" alt=""></button>
                                    </div>
                                </div>
                            </div>                          
                            <% }) %>
                        </div>
                        
                    </div>
                    <div class="my-3 flex justify-center lg:my-6">
                        <button class="w-full bg-[#526D82] hover:bg-[#27374D] py-1 rounded-full hover:rounded-xl text-white text-sm font-medium md:w-1/5 md:h-10">See all Products</button>
                    </div>

                </div>
                <% }) %>
            </div>
            <div class="my-3 flex justify-center lg:my-6">
                <button class="w-full bg-[#27374D] hover:bg-black rounded-xl py-1 text-white text-sm font-medium md:w-1/5 md:h-10">See all categories</button>
            </div>
        </div>
    </div>
    <!--footer-->
    <%- include("partials/footer.ejs") %>

    <!-- side bar -->
    <div id="sidebarcontainer" class="h-full w-full absolute inset-0 bg-[rgba(0,0,0,0.6)] invisible transition-all duration-75">
        <div id="sidebar" class="w-[250px] -translate-x-[250px] transition-all duration-300   flex flex-col h-screen bg-slate-50 absolute top-0 left-0">
            <!-- side bar header -->
            <header class="bg-[#27374D] py-5 px-4">
                <div class="flex justify-start">
                    <img onclick="closesidebar()" src="/images/close-white.png" class="h-4 w-4" alt="">
                </div>
            </header>
            <!-- sidebar container -->
            <div class="px-2 py-2 ">
                <a href="myaccount" class="block text-sm w-full py-2 border-b-4 rounded-lg my-1 bg-white">My Account</a >
                <a href="myorders" class="block text-sm w-full py-2 border-b-4 rounded-lg my-1 bg-white">My orders</a >
                <a href="cart" class="block text-sm w-full py-2 border-b-4 rounded-lg my-1 bg-white">My Cart</a >
                <a href="aboutus" class="block text-sm w-full py-2 border-b-4 rounded-lg my-1 bg-white">About Us</a >
                <a href="" class="block text-sm w-full py-2 border-b-4 rounded-lg my-1 bg-white">Contact Us</a >
            </div>
            <div class="flex flex-grow"></div>
            <!-- logout button -->
            <div class="flex justify-center px-4 my-3">
                <button class="w-full py-3 bg-red-700 text-white font-semibold text-sm rounded-lg">Logout</button>
            </div>
        </div>
    </div>
    
</body>
</html>

<script src="/javascripts/User/landing.js"></script>