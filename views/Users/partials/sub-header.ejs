<header>
    <div id="headercontent" class="bg-[#27374D] px-4 py-3 sm:px-12">
        
        <div id="defaultsubheader" class="flex justify-between  items-center text-white font-medium ">
            <div class="font-semibold md:text-lg"><%= title %></div>
            <div class="flex items-center w-4/12 space-x-5">
                <button onclick="showsearchbox()"><img src="/images/search-white.png" class="h-5 md:hidden mx-5" alt="" /></button>
                <input class="py-3 hidden md:block my-1 w-full bg-white text-black text-sm px-6 rounded-full" placeholder="Search for your products here" type="text">
                <a href="/User/cart"> <img src="/images/cart.png" class="h-6 w-6 md:h-8 md:w-8" alt="image"></a> 
            </div>
        </div>
        
        <div id="expandedsearchbox" class="w-full hidden ">
            <div class="flex bg-white w-full py-2 px-3 space-x-4">
                <button onclick="hidesearchbox()"><img src="/images/left-arrow.png" class="h-4 w-4" alt=""></button>
                <form action="" class="flex w-full">
                    <input type="text" placeholder="What are you looking for today?" class="w-full text-black text-sm font-normal outline-none" name="" id="">
                    <button><img src="/images/search.png" class="h-5 w-5" alt=""></button>
                   
                </form>
                
            </div>
        </div>
        
    </div>
</header>
<script src="/javascripts/User/sub-heading.js"></script>