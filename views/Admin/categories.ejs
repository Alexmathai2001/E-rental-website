<!DOCTYPE html>
<html lang="en">
    
    <!--head-->
    <%- include("partials/head.ejs") %>
<body class="box-border">


    <!--header-->
    <%- include("partials/header.ejs") %>


     <div class="flex ">
        <!--leftside navigation-->
        <div class="border-e-2  ">
            <div class="mx-4 mt-10 mb-60">
                <a href="dashboard" class=" mb-3 ps-4 text-left w-48 py-2 hover:bg-gray-100 block">
                        <div>Dashboard</div>
                </a>
                <a href="products" class=" mb-3 ps-4 text-left w-48 py-2 hover:bg-gray-100 block">
                    <div>Products</div>
                </a>
                <a href="customers" class="hover:bg-gray-100 mb-3 ps-4 text-left w-48 py-2 block">
                    <div>Customers</div>
                </a>
                <a href="orders" class=" hover:bg-gray-100 mb-3 ps-4 text-left w-48 py-2 block">
                    <div>Orders</div>
                </a>
                <a href="categories" class=" mb-3 ps-4 text-left w-48 py-2 bg-[#DDE6ED] block">
                    <div class="font-semibold">Category</div>
                </a>
                <a href="settings" class=" mb-3 ps-4 text-left w-48 py-2 hover:bg-gray-100 block">
                    <div>Settings</div>
                </a>
                
            </div>
        </div>
        <!--rightside content-->
        <div class="mx-7 mt-5 w-screen">

            <div class=" text-2xl font-semibold">Category management</div>
            <!--add product button filter sort-->
            <div class="flex justify-between my-4">
                <div class="">
                    <button onclick="addcategory()" class="bg-[#526D82] text-white px-3 py-1 font-medium rounded">+ Add Category</button>
    
                    <form action="" class="inline">
                        <input type="text" name="" id="" placeholder="search" class="border-2 rounded-full ps-5 ms-5">
                    </form>
                </div>

                <div class="flex items-center">
                    <form action=""  class="flex items-center">
                        <div>Sort:</div>
                        <select name="order" id="" class="bg-white outline-none border-2 rounded-full px-2 opacity-50">
                            <option value="" disabled selected>Choose</option>
                            <option value="All">All</option>
                            <option value="price">price</option>
                            <option value="date">date</option>
                            
                        </select>

                        <div class="ms-3">by:</div>
                        <select name="product" id="" class="bg-white outline-none border-2 rounded-full px-2 opacity-50">
                            <option value="" disabled selected>Choose</option>
                            <option value="All">All</option>
                            <option value="Ascending">Ascending</option>
                            <option value="Descending">Descending</option>
                            <option value="newest">Newest first</option>
                            <option value="oldest">Oldest first</option>
                        </select>
                    </form>
                    <form action="" class="flex items-center">
                        <div class="ms-3">Filer by:</div>
                        <select name="filter" id="" class="bg-white outline-none border-2 rounded-full px-2 opacity-50">
                            <option value="" disabled selected>Choose</option>
                            <option value="All">All</option>
                            <option value="confirmed">Confirmed</option>
                            <option value="shipped">Shipped</option>
                            <option value="out for delivery">Out for delivery</option>
                            <option value="delivered">delivered</option>
                            <option value="returned">returned</option>
                            
                        </select>
                    </form>
                </div>
            </div>
            <!--product table-->
            <div class="h-[32rem]  mt-8 overflow-y-auto">
                <table class="w-full text-center">
                    <tr class="bg-[#526D82] text-white">
                        <th class="font-semibold py-1 rounded-s-md">#</th>
                        <th class="font-semibold py-1">Category Name</th>
                        <th class="font-semibold py-1" class="w-1/3">No. of Product</th>
                        <th class="font-semibold py-1" class="w-1/12">Status</th>
                        <th class="font-semibold py-1">Action</th>
                    </tr>
                    <% categories.forEach((data) => {  %>
                    <tr>
                        <td class=" opacity-70">1</td>
                        <td class=" opacity-70 capitalize"><%= data.categoryname %></td>
                        <td class=" opacity-70 w-1/3"><%= data.products.length %></td>
                        <td><div
                            <% if(data.showstatus === "Listed") { %>
                             class="bg-green-100 text-green-700 rounded-full my-1" 
                             <% }else{ %>
                                class="bg-red-100 text-red-700 rounded-full my-1"
                                <% } %>
                             ><%= data.showstatus
                              %></div></td>
                        <td class=" opacity-70">
                            <button onclick="editpopup(this)" id=" <%= data._id %> "><img src="/images/edit.png" class="h-6" alt=""></button>
                            <button onclick="deletepopup()"><img src="/images/delete.png" class="h-6" alt=""></button>
                        </td>
                    </tr>
                    <% }) %>             
                </table> 
            </div>
        </div>
    </div>
    
    <!--Add category popup--> 
    <%- include("partials/add-category-popup.ejs") %>

    <!--Edit category popup-->
    <%- include('partials/edit-category-popup.ejs') %>

    <!--delete category popup-->
    <%- include("partials/delete-category-popup.ejs") %>

    
</body>

</html>
<script src="/javascripts/Admin/category.js"></script>